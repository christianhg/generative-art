{
  "scripts": {
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "parcel --no-hmr index.html",
    "dist": "npm run prettier-production && npm run test && parcel build index.html",
    "prettier": "prettier --write {*,**/*}.{css,js,md}",
    "prettier-production": "prettier --list-different {*,**/*}.{css,js,md}",
    "test": "trash coverage && nyc --all ava"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "dist",
      "coverage"
    ]
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-register": "^6.26.0",
    "codecov": "^3.0.2",
    "nyc": "^12.0.2",
    "parcel-bundler": "^1.9.2",
    "prettier": "^1.13.5",
    "ramda": "^0.25.0",
    "trash-cli": "^1.4.0"
  }
}
